{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "outDir": "./lib",
    "rootDir": "src",
    "jsx": "react-jsx",
    "paths": {
      "@root/*": ["./src/*"],
      "@core/*": ["./src/core/*"],
      "@helpers/*": ["./src/core/helpers/*"],
      "@bronnen/*": ["./src/bronnen/*"],
      "@verrijkingen/*": ["./src/verrijkingen/*"]
    }
  },
  "include": ["src-old/**/*", "src/**/*", "global.d.ts"]
}
